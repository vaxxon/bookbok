<form action="/authors/create" role="form" method="post">
{{#if author}}
    <div>
        <h2>Editing "{{author.firstName}} {{author.lastName}}"</h2>
        <input type="hidden" name="id" value="{{authorIndex}}">
    </div>
{{/if}}
    <div>
        <label for="first_name">First Name</label>
        <input type="text" id="first_name" name="firstName" {{#if author}} 
            value="{{author.firstName}}"
        {{/if}}>
    </div>
    <div>
        <label for="last_name">Last Name</label>
        <input type="text" id="last_name" name="lastName" {{#if author}}
            value="{{author.lastName}}"
        {{/if}}>
    </div>
    <button type="submit">Submit</button>
</form>